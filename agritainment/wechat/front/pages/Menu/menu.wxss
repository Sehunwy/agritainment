/* pages/Menu/menu.wxss */

.box {
  width: 720rpx;
  height: 8000rpx;
  background-color: green;
  margin: 0 auto;
  position: relative;
}

.top_img {
  width: 750rpx;
  height: 500rpx;
  background-color: blue;
  margin-left: -15rpx;
}

/* 播放图标 */

.Menu_play {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 200rpx;
  left: 310rpx;
}

/* 菜品介绍 */

.info {
  display: flex;
  flex-direction: column;
}

.info_name {
  font-size: 61rpx;
  font-weight: bolder;
  text-align: center;
  margin: 30rpx 0;
}

.info_comment {
  font-size: 26rpx;
  color: #969696;
  text-align: center;
  margin-bottom: 30rpx;
}

.info_content {
  font-size: 32rpx;
  color: 636363;
  margin-bottom: 30rpx;
}

/* 作者 */

.actorInfo {
  width: 100%;
  height: 200rpx;
  background-color: #f9f9f9;
  position: relative;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.actorImg {
  width: 120rpx;
  height: 120rpx;
  background-color: red;
  border-radius: 50%;
  position: absolute;
  margin-top: 30rpx;
  margin-left: 30rpx;
}

.actorName {
  position: absolute;
  margin-top: 40rpx;
  margin-left: 180rpx;
}

.actorIcon {
  position: absolute;
  margin-top: 90rpx;
  margin-left: 180rpx;
  font-size: 28rpx;
  background-color: #fdd900;
  border-radius: 20rpx;
  padding: 5rpx 10rpx;
}

/* 食材列表 */

.material_list,.comment_top  {
  display: flex;
  flex-direction: row;
  margin: 15rpx 0;
}

.material_list text {
  width: 360rpx;
}

/* 厨具 */
.kitchenUtensils{
  width: 100%;
  height: 300rpx;
  background-color: red;
  margin: 100rpx 0;
  font-size: 32rpx;
  color:#969696;
   
}

.Utensils {
display: flex;
  flex-direction: row;
  background-color: blue;
}

.Utensil_list{
  display: flex;
  flex-direction: column;
}

.Utensil_img{
width: 200rpx;
height: 200rpx;
margin-right: 20rpx;
margin-top: 20rpx;
background-color: #f9f9f9; 
}

/* 步骤 */
.step_tip {
  font-size: 36rpx;
  font-weight: bolder;
}

.step_img {
  width: 100%;
  height: 500rpx;
  background-color: yellow;
  margin-top: 30rpx;
}

.step_content {
margin: 50rpx 0;
font-size:32rpx;
}

/* 标签 */


.tags {
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
  width: 100%;
  white-space: nowrap;
  padding: 30rpx 0;
  margin: 50rpx 0;
}

/* 标签名称 */

.tag_name {
  height: 20rpx;
  text-align: center;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  padding: 20rpx 40rpx;
  background-color: #fdf9d4;
  margin: 0 0 20rpx 20rpx;
  border-radius: 20rpx;
}

/* 评论 */

.comment_top {
  justify-content: space-between;
  margin-top: 20rpx;
}

.comment_num {
  font-size: 32rpx;
  color: #ffd700;
}

.myComment {
width: 100%;
height: 100rpx;
background-color: red;
position: relative;
}

.myComment_img {
width: 80rpx;
height: 80rpx;
border-radius: 50%;
background-color: blue;
position: absolute;
top: 0;
left: 0;
}

.comment_input {
  color: #969696;
  border-radius: 15rpx;
  background-color: yellow;
  position: absolute;
  top: 10rpx;
  left: 100rpx;
  text-indent: 30rpx;
  font-size: 32rpx;
}

.comments_list {
display: flex;
flex-direction: row;
margin-top: 30rpx;
font-size: 32rpx;
}

.user_img {
width: 80rpx;
height: 80rpx;
border-radius: 20rpx;
background-color: blue;
margin-right: 20rpx;
}

.user_comment {
  width: 560rpx;
  display: flex;
  flex-direction: column;
}

.user_name {
  color: #969696;
}

.user_comment_bottom {
  display: flex;
  justify-content: space-between;
}

/* 底部按钮 */

.bottom_btn {
position: fixed;
background-color: white;
width:100%;
height:100rpx; 
bottom: 0;
border-top: 1rpx solid #f9f9f9;
display: flex;
flex-direction: row;
align-items: center;
}

.bottom_btn view {
border-right: 1rpx solid #f9f9f9;
width: 188rpx;
height: 60rpx;
display: flex;
flex-direction: row;
align-items: center;
justify-content: center;
font-size: 32rpx;
}

.bottom_btn image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
